generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id              Int     @id
  gender          String
  category        String
  subcategory     String
  productName     String  @db.VarChar(255)
  brand           String  @db.VarChar(255)
  pricePLN        Int
  priceUSD        Int
  description     String  @db.Text
  maintenanceInfo String  @db.Text

  photos      Photo[]
  favourites  Favourite[]
}

model Photo {
  id        Int     @id @default(autoincrement())
  url       String
  productId Int

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model Favourite {
  id        Int @id @default(autoincrement())
  productId Int

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}